<Window x:Class="MusicPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicPlayer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	<Grid>
		<StackPanel x:Name="StackPanel" Width="Auto" Height="Auto" VerticalAlignment="Center" HorizontalAlignment="Center">
            <!-- Select files -->
            <Button x:Name="SelectFileButton" Click="SelectFile" Height="50" Width="75" HorizontalAlignment="Center" Margin="0,0,0,5">
                <Button.FontWeight>Bold</Button.FontWeight>
                <Button.Content>Select File</Button.Content>
            </Button>

            <!-- Album Art -->
            <Border BorderThickness="3" BorderBrush="Black" Width="150" Height="150" CornerRadius="1" Margin="0,0,0,5">
                <Image x:Name="AlbumArt" Height="150" Width="150" VerticalAlignment="Center" HorizontalAlignment="Center"></Image>
            </Border>

            <!-- Song Metadata -->
            <TextBlock x:Name="SongName" HorizontalAlignment="Center" FontSize="16" Width="Auto" Text=""/>
            <TextBlock x:Name="ArtistName" HorizontalAlignment="Center" FontSize="16" Width="Auto" Text=""/>
            <TextBlock x:Name="AlbumName" HorizontalAlignment="Center" FontSize="16" Width="Auto" Text=""/>

            <!-- Playback Controls -->
            <StackPanel x:Name="PlaybackControlsPanel" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                <!-- Progress Slider -->
                <Slider x:Name="ProgressSlider" Width="150" Minimum="0" ></Slider>
                <!-- Play/Pause Button -->
                <Button x:Name="PlayButton" Click = "PlayPause" Height="50" Width="50" HorizontalAlignment="Center">
                    <Button.FontStyle>Italic</Button.FontStyle>
                    <Button.Content>Play</Button.Content>
                </Button>
            </StackPanel>
        </StackPanel>
	</Grid>
</Window>
